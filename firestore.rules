rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Function to get the user's role
    function getUserRole() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return userDoc.role;
    }

    // Allow read access to all documents
    match /{document=**} {
      allow read: if true;
    }

    // Allow authenticated users to write to their own user document
    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow only admins to write to the products collection
    match /products/{productId} {
      allow write: if request.auth != null && getUserRole() == 'admin';
    }
  }
}

// The getUserRole function retrieves the role of the authenticated user.
// The match /{document=**} block allows read access to all documents.
// The match /users/{userId} block allows authenticated users to write to their own user document.
// The match /products/{productId} block allows only users with the role 'admin' to write to the products collection.
